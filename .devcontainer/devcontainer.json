{
	"name": "Conda (pygmt) for Geophysics",
	// --- 基礎環境設定 ---
	// 將基礎映像檔更換為 Microsoft 官方提供的 Miniconda 映像檔
	"image": "mcr.microsoft.com/devcontainers/miniconda:0-3",
	// --- 生命週期指令 ---
	// 'postCreateCommand'：在容器建立完成後執行的指令。
	// 我們使用它來根據 environment.yml 檔案建立 Conda 環境。
	//"postCreateCommand": "conda env create -f .devcontainer/environment.yml && conda run -n pygmt git lfs install --skip-smudge && conda init && source ~/.bashrc && conda activate pygmt",
	"postCreateCommand": "conda env create -f .devcontainer/environment.yml",

	// --- 客製化設定 ---
	"customizations": {
		"vscode": {
			// --- VS Code 設定 ---
			"settings": {
				// **非常重要**: 將 VS Code 的 Python 直譯器指向我們新建立的 Conda 環境
				// 這樣 VS Code 才能找到正確的套件 (pygmt, obspy 等)
				"python.defaultInterpreterPath": "/opt/conda/envs/pygmt/bin/python",
				"python.linting.pylintEnabled": true,
				"python.linting.enabled": true
			},
			// --- VS Code 擴充功能 ---
			// 這些擴充功能保持不變，因為它們同樣實用
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter",
				"eamodio.gitlens",
				"ms-python.isort",
				"ms-vscode.vscode-websearchforcopilot"
			]
		}
	},
	// 'forwardPorts' 保持不變
	"forwardPorts": [
		8888,
		7860,
		8501
	],
	// 'remoteUser' 保持不變
	"remoteUser": "vscode"
}
